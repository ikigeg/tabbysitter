{
  "name": "TabbySitter",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Automatically reload tabs that have crashed (Aw Snap! He's Dead Jim etc.), or have been sat around for a while. Handy for Kiosk mode where access is limited.",
  "homepage_url": "https://github.com/ikigeg/tabbysitter",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png"
  },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": true
  },
  "permissions": ["tabs", "http://*/", "https://*/", "file://*/"],
  "browser_action": {
    "default_popup": "src/popup.html"
  }
}
